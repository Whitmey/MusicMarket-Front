<div class="controls">
  <div class="tabs">
    {{#link-to 'shares'}}
      All
    {{/link-to}}
    {{#link-to 'register'}}
      Favorites
    {{/link-to}}
  </div>
  <div class="search">
    {{input value=searchWord placeholder="Search"}}
  </div>
</div>

<div class="table-list">
  <table>
    <tr class="column">
      <th>#</th>
      <th>Name</th>
      <th>Artist</th>
      <th>Streams</th>
      <th>Price</th>
      <th>Change</th>
      <th>Change %</th>
      <th></th>
    </tr>
    {{#each shares as |share|}}
      <tr class="row">
        <td>{{share.position}}</td>
        <td>{{share.trackName}}</td>
        <td>{{share.artist}}</td>
        <td>{{share.streams}}</td>
        <td>{{money share.price}}</td>
        {{money-change share.change}}
        {{percent-change share.changeAsPercent}}
        <td>
          {{buy-dialog share=share}}
        </td>
      </tr>
    {{/each}}
  </table>
</div>
