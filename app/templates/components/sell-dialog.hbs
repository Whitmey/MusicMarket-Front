{{yield}}<button {{action "toggleModal"}} class="button-link">Sell</button>

{{#liquid-if isShowingModal growDuration=1000}}
  {{#modal-dialog onClose="toggleModal"
                  containerClass="sell-dialog-container"
                  targetAttachment="center"
                  translucentOverlay=true}}

  <div class="top-panel">
    <div class="title">
      {{share.trackName}} - {{share.artist}}
    </div>
    <a {{action "toggleModal"}} class="close-btn">
      <svg width="32" height="32" viewBox="0 0 32 32">
        <g fill="none" fill-rule="evenodd">
            <path stroke="#6F6F7F" d="M9.5 9.5L22.5 22.5M22.5 9.5L9.5 22.5" stroke-linecap="round"></path>
        </g>
      </svg>
    </a>
  </div>

  <div class="mid-panel">
    <div class="details">
      <div class="box">
        <div class="label">PRICE AT PURCHASE</div>
        <div class="value">{{share.priceAtPurchase}}.<span>83</span></div>
      </div>
      <div class="box">
        <div class="label">CURRENT PRICE</div>
        <div class="value">{{share.currentPrice}}.<span>83</span></div>
      </div>
    </div>
    <div class="totalCost">
      <div class="box">
        <div class="label">QUANTITY</div>
        <div class="value">{{share.quantity}}</div>
      </div>
      <div class="box">
        <div class="label">TOTAL VALUE</div>
        <div class="value">{{share.value}}.<span>00</span></div>
      </div>
      <div class="box">
        <div class="label">TOTAL PROFIT</div>
        <div class="value">{{share.profitLoss}}.<span>00</span></div>
      </div>
    </div>
  </div>

  <div class="bottom-panel">
    <a {{action "sell"}}>
      CONFIRM SELL
    </a>
  </div>

  {{/modal-dialog}}
{{/liquid-if}}
{{yield}}
