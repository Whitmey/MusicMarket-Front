<div class="container">
  <h3>Sign In</h3>

  <form {{action (route-action 'authenticate' username password) on="submit"}}>
    {{input value=username type="text" placeholder="Username"}}
    {{input value=password type="password" placeholder="Password"}}
    <button type="submit" class="button-link">Sign In</button>
  </form>
</div>

{{yield}}
